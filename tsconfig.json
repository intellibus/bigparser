{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": false,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test"]
}
